{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "~/*": ["src/server/*"],
      "common/*": ["src/common/*"]
    },
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "src/client/**/*.vue", "./prisma", "./src/common"],
  "exclude": ["src/**/*.spec.ts"]
}
